---
import AstrojsIcon from '@assets/techIcons/astrojs.svg';
import FigmaIcon from '@assets/techIcons/figma.svg';
import GithubIcon from '@assets/techIcons/github.svg';
import JavascripIcon from '@assets/techIcons/javascript.svg';
import NextjsIcon from '@assets/techIcons/nextjs.svg';
import NodejsIcon from '@assets/techIcons/nodejs.svg';
import ReactIcon from '@assets/techIcons/react.svg';
import TurbopackIcon from '@assets/techIcons/turbopack.svg';
import TypescriptIcon from '@assets/techIcons/typescript.svg';
import { Button } from '@components/Button';
import { Image } from 'astro:assets';
---

<section
  class='container max-w-screen-desktop bg-black py-13 !text-white tablet:py-15 laptop:py-16'
>
  <table class='mb-10 table w-full table-fixed border-collapse'>
    <tbody>
      <tr class='h-[112px] tablet:h-16 laptop:h-17'>
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='react-icon' src={ReactIcon} />
          <p class='text-center'>React</p>
        </td>
        <td class='border border-gray-1100 p-2'>
          <Image
            class='mx-auto mb-2'
            alt='javascript-icon'
            src={JavascripIcon}
          />
          <p class='text-center'>JavaScript</p></td
        >
        <td class='border border-gray-1100 p-2'>
          <Image
            class='mx-auto mb-2'
            alt='typescript-icon'
            src={TypescriptIcon}
          />
          <p class='text-center'>TypeScript</p></td
        >
      </tr>
      <tr class='tablet:h-16 laptop:h-17'>
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='nextjs-icon' src={NextjsIcon} />
          <p class='text-center'>Next.js</p>
        </td>
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='astro-icon' src={AstrojsIcon} />
          <p class='text-center'>Astro</p></td
        >
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='figma-icon' src={FigmaIcon} />
          <p class='text-center'>Figma</p></td
        >
      </tr>
      <tr class='h-[112px] tablet:h-16 laptop:h-17'>
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='nodejs-icon' src={NodejsIcon} />
          <p class='text-center'>NodeJS</p>
        </td>
        <td class='border border-gray-1100 p-2'>
          <Image class='mx-auto mb-2' alt='github-icon' src={GithubIcon} />
          <p class='text-center'>GitHub</p></td
        >
        <td class='border border-gray-1100 p-2'>
          <Image
            class='mx-auto mb-2'
            alt='turbopack-icon'
            src={TurbopackIcon}
          />
          <p class='text-center'>Turbopack</p></td
        >
      </tr>
    </tbody>
  </table>
  <div class='mb-6 grid gap-y-3 !text-center'>
    <p class='text-xs text-gray-1000'>SOFTWARE ENGINEERING</p>
    <h1 class='text-xl font-bold'>
      Learn the latest <span class='text-playful'>dev stacks</span>
    </h1>
    <p class='tracking-s text-s text-gray-1000'>
      Get hands-on experience with high in-demand tools and frameworks
    </p>
  </div>
  <Button
    title='Enroll now'
    className='mx-auto bg-white !px-3 !py-2 !text-xs !text-primary tablet:!px-6 tablet:!py-3'
  />
</section>
