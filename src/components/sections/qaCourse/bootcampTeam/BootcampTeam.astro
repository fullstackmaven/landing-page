---
import InstructorCard from './InstructorCard/InstructorCard.astro';
type TInstructor = {
  title: string;
  imageUrl: string;
  name: string;
  jobTitle: string;
  imageCompanyUrl: string;
  companyname: string;
};

const defaultInstructors: TInstructor[] = [
  {
    title: 'Teacher',
    imageUrl: 'qa-course/expert-instructor-1.jpeg',
    name: 'Sara Mustafa',
    jobTitle: 'Software Engineer',
    imageCompanyUrl: 'airbnb-icon.svg',
    companyname: 'Airbnb',
  },
  {
    title: 'Teacher',
    imageUrl: 'qa-course/expert-instructor-2.jpeg',
    name: 'Steven Murphy',
    jobTitle: 'Software Engineer',
    imageCompanyUrl: 'airbnb-icon.svg',
    companyname: 'Airbnb',
  },
  {
    title: 'Teacher',
    imageUrl: 'qa-course/expert-instructor-3.jpeg',
    name: 'Lauren Zirbard',
    jobTitle: 'Software Engineer',
    imageCompanyUrl: 'airbnb-icon.svg',
    companyname: 'Airbnb',
  },
];
---

<div class='container'>
  <p class='text-dark-gray text-xxs font-normal leading-normal uppercase pb-3'>
    BOOTCAMP TEAM
  </p>
  <h1 class='text-dark text-l font-bold leading-normal pb-3'>
    Meet our expert instructors
  </h1>
  <p class='text-s font-normal leading-5 text-dark-gray pb-4'>
    {
      `During your training, you will be guided step by step from our highly experienced instructors who worked at top companies of various industries.`
    }
  </p>
  <div class='flex flex-row w-full space-x-4'>
    {
      defaultInstructors.map((instructor, index) => (
        <InstructorCard key={`qa-course-instructor-${index}`} {...instructor} />
      ))
    }
  </div>
</div>
