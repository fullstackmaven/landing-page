---
interface TAnswers {
  title: string;
  description: string;
};

const defaultAnswers: TAnswers[] = [
  {
    title: `Live QA Workshops`,
    description: `Start as a QA enthusiast and, as you dive into the tech universe, you'll discover endless possibilities. Whether you want to explore further in automation or explore other tech roles, the path is yours to chart.`,
  },
  {
    title: `Real-World Case Studies`,
    description: `Apply your skills by tackling real-world QA scenarios, preparing you for actual industry challenges.`,
  },
  {
    title: `Personalized Feedback`,
    description: `Receive valuable feedback from your instructors to refine your QA skills.`,
  },
  {
    title: `Engaging QA Community:`,
    description: `Join a vibrant QA community for support, collaboration, and networking opportunities.`,
  },
  {
    title: `Certification`,
    description: `Earn a prestigious Cyram certification upon successful completion of your QA Bootcamp.`,
  },
];
---

<div id="why-cyram" class="container grid gap-y-4 lg:gap-y-6">
  <p
    class="text-dark-gray text-xs leading-5 font-normal uppercase lg:text-s lg:leading-6"
  >
    WHY CYRAM
  </p>
  <h2
    class="text-dark text-l leading-8 font-bold md:text-xl md:leading-2xl lg:text-2xl lg:leading-3xl"
  >
    A live and immersive learning experience
  </h2>
  <p
    class="text-s text-dark-gray font-normal leading-6 lg:text-base lg:leading-7"
  >
    Our live classes are an opportunity to learn-by-doing with other students.
    We take an active learning approach to ensure you retain and practice key
    skills.
  </p>
  <div class="grid gap-y-6">
    {
      defaultAnswers.map((answer) => (
        <div class="grid gap-y-2">
          <p class="flex text-dark text-s leading-6 font-bold items-center lg:text-base">
            <span class="pr-2">
              <img src="qa-course/star-mobile.svg" alt="fff" />
            </span>
            {answer.title}
          </p>
          <p class="text-s text-dark-gray font-normal leading-6 lg:text-base lg:leading-7">
            {answer.description}
          </p>
        </div>
      ))
    }
  </div>
</div>
