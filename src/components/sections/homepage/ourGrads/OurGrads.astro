    >
      <Image
        src={ImageMeta}
        alt='meta-logo'
        loading='lazy'
        decoding='async'
        class='h-full tablet:hidden tablet:appearance-none'
      />
      <Image
        src={ImageNetflix}
        alt='netflix-logo'
        loading='lazy'
        decoding='async'
        class='h-full tablet:hidden tablet:appearance-none'
      />
      <Image
        src={ImageUber}
