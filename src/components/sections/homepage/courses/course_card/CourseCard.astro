---
import LiveIndicatorPulse from '@components/LiveIndicatorPulse.astro';
import { Image } from 'astro:assets';
import classNames from 'classnames';
import type { TCourse } from 'src/types/Course';
import ImageLiveLectureTools from '/public/home-page/live-lecture-tools-image.svg';
interface Props {
  course: TCourse;
}

const { course } = Astro.props;
---

<article>
  <a
    href='/'
    role='button'
    class='flex cursor-pointer flex-col items-center self-stretch rounded-[16px] border border-[#DEDCD3] bg-white p-3 transition ease-in-out hover:-translate-y-4 hover:bg-dark-gray/10 focus:-translate-y-4 focus:bg-dark-gray/10 lg:p-4'
  >
    <div
      class={classNames(
        'relative flex bg-[url("/home-page/live-lecture-image.jpeg")] mb-6 lg:mb-8 w-full min-h-[314px] lg:min-h-[431px] bg-no-repeat bg-cover bg-center rounded-l md:rounded-l',
      )}
    >
      <div class='flex h-auto w-full rounded-l backdrop-blur-[2px]'></div>
      <div
        class='absolute left-4 top-5 flex justify-between lg:left-6 lg:top-6'
      >
        <div
          class='flex w-fit items-center gap-3 rounded-s border border-[#C0BFB2] bg-[#bebebe66] px-2 py-1 backdrop-blur-[2px]'
        >
          <LiveIndicatorPulse />
          <p class='text-xs font-normal text-white lg:text-base'>
            Live Lectures
          </p>
        </div>
      </div>

      <Image
        src={ImageLiveLectureTools}
        alt='live-lecture-tools-image'
        loading='lazy'
        decoding='async'
        class='absolute right-4 top-5 lg:right-6 lg:top-6'
      />
    </div>
    <h1
      class='mb-1 place-self-start text-base font-bold text-dark lg:mb-3 lg:text-l'
    >
      {course.courseTitle}
    </h1>
    <p class='place-self-start text-s font-medium text-dark-gray lg:text-base'>
      {course.type} &#183; {course.duration} months
    </p>
  </a>
</article>
