---
import AstrojsIcon from '@assets/common/techIcons/astrojs.svg';
import FigmaIcon from '@assets/common/techIcons/figma.svg';
import GithubIcon from '@assets/common/techIcons/github.svg';
import JavascripIcon from '@assets/common/techIcons/javascript.svg';
import NextjsIcon from '@assets/common/techIcons/nextjs.svg';
import NodejsIcon from '@assets/common/techIcons/nodejs.svg';
import ReactIcon from '@assets/common/techIcons/react.svg';
import TurbopackIcon from '@assets/common/techIcons/turbopack.svg';
import TypescriptIcon from '@assets/common/techIcons/typescript.svg';
import { Button } from '@components/Button';
import { Image } from 'astro:assets';
---

<section class='bg-black'>
  <div
    class='container max-w-screen-desktop py-13 !text-white tablet:py-15 laptop:py-16'
  >
    <table class='mb-10 table w-full table-fixed border-collapse'>
      <tbody>
        <tr class='h-[112px] tablet:h-16 laptop:h-17'>
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='react-icon' src={ReactIcon} />
            <p class='text-center'>React</p>
          </td>
          <td class='border border-gray-1100 p-2'>
            <Image
              class='mx-auto mb-2'
              alt='javascript-icon'
              src={JavascripIcon}
            />
            <p class='text-center'>JavaScript</p></td
          >
          <td class='border border-gray-1100 p-2'>
            <Image
              class='mx-auto mb-2'
              alt='typescript-icon'
              src={TypescriptIcon}
            />
            <p class='text-center'>TypeScript</p></td
          >
        </tr>
        <tr class='tablet:h-16 laptop:h-17'>
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='nextjs-icon' src={NextjsIcon} />
            <p class='text-center'>Next.js</p>
          </td>
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='astro-icon' src={AstrojsIcon} />
            <p class='text-center'>Astro</p></td
          >
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='figma-icon' src={FigmaIcon} />
            <p class='text-center'>Figma</p></td
          >
        </tr>
        <tr class='h-[112px] tablet:h-16 laptop:h-17'>
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='nodejs-icon' src={NodejsIcon} />
            <p class='text-center'>NodeJS</p>
          </td>
          <td class='border border-gray-1100 p-2'>
            <Image class='mx-auto mb-2' alt='github-icon' src={GithubIcon} />
            <p class='text-center'>GitHub</p></td
          >
          <td class='border border-gray-1100 p-2'>
            <Image
              class='mx-auto mb-2'
              alt='turbopack-icon'
              src={TurbopackIcon}
            />
            <p class='text-center'>Turbopack</p></td
          >
        </tr>
      </tbody>
    </table>
    <div class='mb-6 grid gap-y-3 !text-center'>
      <p class='text-xs font-light text-gray-1000 tablet:text-s'>
        SOFTWARE ENGINEERING
      </p>
      <h1 class='text-xl font-bold text-gray-1000 tablet:text-2xl'>
        Learn the latest <span class='text-playful'>dev stacks</span>
      </h1>
      <p class='text-s font-light tracking-s text-gray-1000 tablet:text-base'>
        Get hands-on experience with high in-demand tools and frameworks
      </p>
    </div>
    <Button
      title='Enroll now'
      className='mx-auto bg-white !px-3 !py-2 !text-xs !text-primary tablet:!px-6 tablet:!py-3 tablet:!text-s'
    />
  </div>
</section>
