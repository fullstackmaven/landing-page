---
import type { TInstructor } from '../BootcampTeam.astro';

interface Props extends TInstructor {}
const { title, imageUrl, name, jobTitle, imageCompanyUrl, companyname } =
  Astro.props;
---

<div
  class={`relative w-full h-full bg-cover bg-no-repeat bg-center rounded-l tablet:rounded-[16px]`}
  style={{ backgroundImage: `url('${imageUrl}')` }}
>
  <p
    class='absolute left-3 top-3 rounded-xs bg-cultured px-[6px] py-[2px] text-xxs font-normal text-primary laptop:px-4 laptop:py-1 laptop:text-s'
  >
    {title}
  </p>
  <div class='absolute bottom-3 left-3 flex w-full flex-col gap-y-2'>
    <div>
      <p class='text-s font-bold text-white tablet:text-s laptop:text-l'>
        {name}
      </p>
      <p class='text-xxs font-medium text-gray-200 laptop:text-s'>{jobTitle}</p>
    </div>
    <div class='flex w-full flex-row items-center gap-x-1 laptop:gap-x-3'>
      <div
        class='h-5 w-5 bg-contain bg-no-repeat tablet:h-8 tablet:w-8 laptop:h-10 laptop:w-10'
        style={{ backgroundImage: `url('${imageCompanyUrl}')` }}
      >
      </div>
      <div
        class='h-[1px] w-4 bg-white tablet:w-6 laptop:h-[2px] laptop:w-[54px]'
      >
      </div>
      <p
        class='text-xxs font-medium text-gray-200 tablet:text-xxs laptop:text-s'
      >
        {companyname}
      </p>
    </div>
  </div>
</div>
