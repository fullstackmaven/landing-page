---
import type { TInstructor } from '../BootcampTeam.astro';

interface Props extends TInstructor {}
const { title, imageUrl, name, jobTitle, imageCompanyUrl, companyname } =
  Astro.props;
---

<div
  class={`relative w-full h-full bg-cover bg-no-repeat bg-center rounded-s`}
  style={{ backgroundImage: `url('${imageUrl}')` }}
>
  <p
    class='absolute left-4 top-4 rounded-xs bg-cultured px-[6px] py-[2px] text-xxs font-normal text-dark lg:px-4 lg:py-1 lg:text-s'
  >
    {title}
  </p>
  <div class='absolute bottom-4 left-4 flex w-full flex-col gap-y-2'>
    <div>
      <p class='text-s font-bold text-white md:text-s lg:text-l'>{name}</p>
      <p class='text-xxs font-medium text-[#DEDCD3] lg:text-s'>{jobTitle}</p>
    </div>
    <div class='flex w-full flex-row items-center gap-x-1 lg:gap-x-3'>
      <div
        class='h-5 w-5 bg-contain bg-no-repeat md:h-8 md:w-8 lg:h-10 lg:w-10'
        style={{ backgroundImage: `url('${imageCompanyUrl}')` }}
      >
      </div>
      <div class='h-[1px] w-4 bg-white md:w-6 lg:h-[2px] lg:w-[54px]'></div>
      <p class='text-xxs font-medium text-[#DEDCD3] md:text-xxs lg:text-s'>
        {companyname}
      </p>
    </div>
  </div>
</div>
