        />
        <Image
          src={ImageAirbnb}
          alt='airbnb-logo'
          loading='lazy'
          decoding='async'
          class='hidden h-full appearance-none tablet:block'
        />
        <Image
          src={ImageAirbnb}
          alt='airbnb-logo'
          loading='lazy'
          decoding='async'
          class='hidden h-full appearance-none tablet:block'
        />
        <Image
          src={ImageAirbnb}
          alt='airbnb-logo'
          loading='lazy'
          decoding='async'
          class='hidden h-full appearance-none tablet:block'
        />
      </div>
    </div>
  </div>

  <div class='my-4 flex w-full content-center justify-center'>
    <!-- <Image
      src={ImageGradWorkVideo}
      alt='grad-work-video'
      loading='lazy'
      decoding='async'
      class='w-full rounded-l object-contain tablet:hidden'
    /> -->
    <Image
      src={ImageOverview}
      alt='grad-work-video-desktop'
      loading='lazy'
      decoding='async'
      class='w-full object-contain tablet:rounded-[16px] laptop:rounded-2xl'
    />
  </div>
</section>
