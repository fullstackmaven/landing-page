---
import classNames from "classnames";

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div class={classNames("relative", className)}>
  <div
    class="lg:cursor-pointer absolute inset-0 m-auto bg-primary py-2 px-5 w-fit h-fit"
  >
    <img src="qa-course/play-button.svg" />
  </div>
  <slot />
</div>
