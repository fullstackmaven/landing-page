---
import classNames from 'classnames';
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div
  class={classNames(
    'relative flex h-4 w-4 items-center justify-center rounded-full',
    className,
  )}
>
  <span
    class='absolute inline-flex h-full w-full animate-ping-slow rounded-full bg-red-300'
  ></span>
  <span class='relative inline-flex h-2 w-2 rounded-full bg-red-700'></span>
</div>
