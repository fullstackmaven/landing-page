---
import { Button } from '@components/Button';
import GetPaidOrRefundCard from './Cards/GetPaidOrRefundCard.astro';
---

<section id='qa-tuition' class='wrapper grid gap-y-4 lg:gap-y-6'>
  <p class='text-xs font-normal uppercase leading-5 text-dark-gray'>
    Bootcamp tuition
  </p>
  <h1
    class='text-l font-bold leading-8 text-dark md:text-xl md:leading-2xl lg:text-2xl'
  >
    Tuition made simple and affordable
  </h1>
  <div class='flex flex-col gap-4 md:grid md:grid-cols-2 md:gap-6'>
    <ul
      class='order-1 flex w-full flex-col gap-y-4 rounded-l bg-white p-4 md:col-span-1 md:gap-y-6 md:rounded-[16px] md:p-6 lg:gap-y-8 lg:p-8'
    >
      <li class='flex h-[70px] items-center justify-between'>
        <h3 class='text-base font-bold text-dark lg:text-l'>Upfront</h3>
        <h3 class='flex flex-col gap-2 text-base font-bold text-dark lg:text-l'>
          $8,700
          <span
            class='rounded-xs bg-[#DDF7C7] px-[6px] py-1 text-center text-xxs font-normal text-dark'
            >Pay total â€¢ save $800</span
          >
        </h3>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li class='flex h-[70px] items-center justify-between'>
        <h3 class='text-base font-bold text-dark lg:text-l'>Installments</h3>
        <h3 class='flex flex-col gap-2 text-base font-bold text-dark lg:text-l'>
          $1,180 / month
          <span
            class='rounded-xs bg-[#DDF7C7] px-[6px] py-1 text-center text-xxs font-normal text-dark'
            >$9,440 in total</span
          >
        </h3>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li>
        <Button
          className='h-12 w-full px-6 py-3 lg:px-8 lg:py-4'
          title='Enroll now'
        />
      </li>
    </ul>
    <div
      class='order-3 md:order-2 md:col-span-1 lg:order-3 lg:col-span-1 lg:row-span-1'
    >
      <GetPaidOrRefundCard />
    </div>
  </div>
</section>
