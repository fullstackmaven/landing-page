---
import { Button } from '../../../Button.tsx';
import GetPaidCard from './Cards/GetPaidCard.astro';
import NotSureYetCard from './Cards/NotSureYetCard.astro';
---

<div id='qa-tuition' class='container'>
  <p class='text-dark-gray text-xxs font-normal uppercase pb-3 lg:text-s'>
    Bootcamp tuition
  </p>
  <h1 class='text-dark text-l font-bold pb-4 lg:text-2xl'>
    Tuition made simple and affordable
  </h1>
  <div class='flex flex-col md:flex-row md:space-x-6 md:mb-6'>
    <ul
      class='bg-white p-6 rounded-s space-y-3 lg:space-y-8 mb-4 md:mb-0 w-full md:w-1/2'
    >
      <li class='flex justify-between items-center'>
        <h1 class='text-dark text-base font-bold leading-[26px] lg:text-l'>
          Upfront
        </h1>
        <h1 class='flex flex-col text-dark text-base font-bold lg:text-l'>
          $8,700
          <span
            class='text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-[8px] font-normal leading-[10.4px] text-center'
            >Pay total â€¢ save $800</span
          >
        </h1>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li class='flex justify-between items-center'>
        <h1 class='text-dark text-base font-bold leading-[26px] lg:text-l'>
          Installments
        </h1>
        <h1 class='flex flex-col text-dark text-base font-bold lg:text-l'>
          $1,180 / month
          <span
            class='text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-[8px] font-normal leading-[10.4px] text-center'
            >$9,440 in total</span
          >
        </h1>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li>
        <Button className='w-full py-4 px-6' title='Apply now' />
      </li>
    </ul>
    <div class='w-full md:w-1/2'>
      <div class='appearance-none hidden w-full lg:block'>
        <NotSureYetCard />
      </div>
      <div
        class='appearance-none hidden md:block md:visible w-full max-h-fit md:w-full md:h-full lg:h-auto'
      >
        <GetPaidCard />
      </div>
    </div>
  </div>
  <div class='lg:hidden'>
    <NotSureYetCard />
  </div>
  <div class='md:hidden'>
    <GetPaidCard />
  </div>
</div>
