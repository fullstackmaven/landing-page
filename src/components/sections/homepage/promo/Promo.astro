---
import { Button } from '@components/Button';
import { Image } from 'astro:assets';

import HeroImage from '/public/home-page/hero-image.svg';
import PlayIconLight from '/public/play-icon-light.svg';
---

<section class='container pb-8 pt-13'>
  <header class='laptop:w-[638px] laptop:items-center'>
    <h1
      class='text-dark mb-3 self-stretch text-2xl font-extrabold leading-tight tablet:text-[64px] tablet:font-extrabold tablet:leading-snug laptop:text-center'
    >
      Change your life.
      <span class='text-accent'>Learn coding.</span>
    </h1>
  </header>
  <p
    class='text-dark mb-0 self-stretch text-s font-medium leading-6 tablet:text-base tablet:leading-base laptop:mx-auto laptop:w-[638px] laptop:items-center laptop:text-center'
  >
    Accelerate Your Tech Career with Mastery-Based Learning
  </p>
  <Button
    className='mx-auto my-6 w-fit !px-3 !py-2 !text-xs font-semibold'
    title='Live Bootcamps'
  />
  <div class='relative h-fit'>
    <Image alt='' src={HeroImage} class='' />
    <div
      class='absolute inset-0 z-10 m-auto h-full w-full rounded-2xl border bg-black/75'
    >
    </div>
    <Image alt='' src={PlayIconLight} class='absolute inset-0 z-20 m-auto' />
  </div>
</section>
