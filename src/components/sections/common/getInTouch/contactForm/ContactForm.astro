---
import { Button } from '@components/Button';
import Dropdown from '@components/Dropdown';
---

<div class='md:p-6 h-full w-full rounded-s bg-white p-4'>
  <div class='mb-4 flex content-center justify-around'>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='rounded-xl flex h-8 w-8 justify-center self-center bg-[#EBEBEB]'
      >
        <p class='self-center text-xs'>1</p>
      </div>
      <p class='m-2'>Contact info</p>
    </div>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='rounded-xl flex h-8 w-8 justify-center self-center bg-[#EBEBEB]'
      >
        <p class='self-center text-xs'>2</p>
      </div>
      <p class='m-2'>Q&A</p>
    </div>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='rounded-xl flex h-8 w-8 justify-center self-center bg-[#EBEBEB]'
      >
        <p class='self-center text-xs'>3</p>
      </div>
      <p class='m-2'>Book a Call</p>
    </div>
  </div>
  <form class='mt-6 flex flex-col px-4'>
    <input
      class='md:py-2 md:px-3 md:text-xxs mb-4 rounded-s border border-[#EBEBEB] px-5 py-4'
      type='text'
      placeholder='Name'
    />
    <input
      class='md:py-2 md:px-3 md:text-xxs mb-4 rounded-s border border-[#EBEBEB] px-5 py-4'
      type='email'
      placeholder='Email'
    />
    <div class='md:gap-x-1 mb-4 flex flex-row justify-between gap-x-2'>
      <Dropdown client:load />
      <input
        class='md:py-2 md:px-3 md:text-xxs w-8/12 rounded-s border border-[#EBEBEB] px-5 py-4'
        type='number'
        placeholder='Phone Number'
      />
    </div>
    <Button
      title={'Continue'}
      className={'bg-dark/90 text-dark mt-6 w-full py-4'}
    />
  </form>
</div>
