---
import ImageStarPricingDark from '@assets/qa/star-pricing-dark.svg';
import { Image } from 'astro:assets';
import classNames from 'classnames';
import type { ReactNode } from 'react';
import ImageStarPricing from '/public/star-pricing.svg';

interface TPriceList {
  label: string | ReactNode;
  price: string;
}
interface Props {
  dark?: boolean;
  title?: string;
  prevPrice?: string;
  currentPrice?: string;
  priceList?: TPriceList[];
  list?: string[];
}

const props = Astro.props;
---

<section
  class={classNames(
    'isolate grid max-w-md grid-cols-1 gap-8 laptop:mx-0 laptop:max-w-none laptop:grid-cols-3',
  )}
>
  <div
    class={classNames('flex flex-col gap-3 rounded-l bg-white p-6', {
      '!bg-primary': props.dark,
    })}
  >
    <div class='flex flex-col gap-3'>
      <h3
        id='tier-startup'
        class={classNames('text-base font-bold', {
          '!text-white': props.dark,
        })}
      >
        {props.title}
      </h3>
      <p
        class={classNames('text-gray-600 text-base', {
          '!text-white': props.dark,
        })}
      >
        <span class='line-through'>{props.prevPrice}</span>
        {props.currentPrice}
      </p>
    </div>
    <ul class='flex flex-col gap-3'>
      {
        props?.priceList?.map((data) => (
          <li class='border-b-gray-1000 border border-x-0 border-t-0 last:border-b-0'>
            <p
              class={classNames(' flex justify-between py-3 text-xs', {
                '!text-white': props.dark,
              })}
            >
              {data.label === 'Save today' ? (
                <span class='rounded-xs bg-neon px-[6px] py-[2px] text-primary'>
                  Save today
                </span>
              ) : (
                <span>{data.label}</span>
              )}

              <span>{data.price}</span>
            </p>
          </li>
        ))
      }
    </ul>
    <ul class='text-sm xl:mt-10 text-gray-600 space-y-3 leading-6'>
      {
        props?.list?.map((data) => (
          <li class='flex gap-x-3'>
            {props.dark ? (
              <Image
                src={ImageStarPricing}
                alt='star-mobile'
                loading='lazy'
                decoding='async'
              />
            ) : (
              <Image
                src={ImageStarPricingDark}
                alt='star-mobile-dark'
                loading='lazy'
                decoding='async'
              />
            )}

            <p class={classNames('text-s', { '!text-white': props.dark })}>
              {data}
            </p>
          </li>
        ))
      }
    </ul>
    <a
      href='/'
      aria-describedby='tier-upfront'
      class={classNames(
        'hover:bg-indigo-500 focus-visible:outline-indigo-600 block rounded-s bg-primary px-3 py-2 text-center text-s font-semibold leading-6 tracking-wider text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2',
        {
          '!text-primary !bg-dark': props.dark,
        },
      )}>Enroll now</a
    >
  </div>
</section>
