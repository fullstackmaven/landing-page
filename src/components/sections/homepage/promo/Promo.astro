---
import { Button } from '@components/Button';
import { Image } from 'astro:assets';
import ImagePlayCircle from '/public/home-page/play-circle.svg';
---

<!-- <section
  class=' flex flex-col gap-y-6 pb-12 md:gap-y-8 md:pt-6 lg:items-center lg:gap-y-8 lg:py-13'
> -->
<section
  class='md:gap-y-8 md:pt-6 lg:items-center lg:gap-y-8 lg:py-13 flex flex-col gap-y-6 pb-12'
>
  <header class='lg:items-center'>
    <h1
      class='md:text-[64px] md:font-extrabold md:leading-snug lg:text-center self-stretch text-2xl font-extrabold leading-tight text-black'
    >
      Change your life,
      <span class='text-accent'>learn coding</span>
    </h1>
  </header>
  <p
    class='text-dark md:text-base md:leading-base lg:mx-auto lg:w-[638px] lg:items-center lg:text-center mb-0 self-stretch text-s font-medium leading-6'
  >
    Accelerate Your Tech Career with Mastery-Based Learning
  </p>
  <Button
    className='md:block hidden w-fit font-semibold'
    title='Choose your career'
  />
  <div class='relative'>
    <Image
      src={ImagePlayCircle}
      alt='play-circle'
      loading='lazy'
      decoding='async'
      class='md:h-13 md:w-13 lg:h-[75px] lg:w-[75px] absolute bottom-0 left-0 right-0 top-0 m-auto h-12 w-12 cursor-pointer'
    />
    <video
      src='/'
      class='md:min-h-[388px] md:rounded-[16px] lg:mx-13 lg:w-[832px] flex min-h-[192px] w-full flex-col items-center justify-center self-stretch rounded-[16px] bg-[#6d6a6a]'
      muted></video>
  </div>
  <Button
    className='md:hidden mx-auto text-s font-semibold'
    title='Choose your career'
  />
</section>
