---
import WorkshopImage from '@assets/se/workshop-image.svg';
import { Button } from '@components/Button';
import { Image } from 'astro:assets';
---

<section class='container flex max-w-screen-desktop flex-col laptop:flex-row'>
  <div>
    <header class='grid gap-y-3'>
      <p class='text-xxs uppercase text-gray-700 tablet:text-xs laptop:text-s'>
        WORKSHOP
      </p>
      <h1
        class:list={[
          'tracking-base text-l font-bold leading-[normal] text-black tablet:text-xl laptop:text-2xl',
        ]}
      >
        Live workshops led by industry experts
      </h1>
    </header>
    <div>
      <div
        class='tracking-s my-4 grid gap-y-2 !text-s tablet:my-6 laptop:!text-base'
      >
        <p class='leading-6 text-gray-700'>
          Work on coding challenges together with other engineers like you
        </p>
        <p class='leading-6 text-gray-700'>
          Discuss wide range of topics in the industry
        </p>
        <p class='leading-6 text-gray-700'>Learn and experiment new tools</p>
      </div>
      <Button
        title='Enroll now'
        className='mb-6 !px-4 !py-2 tablet:!px-6 tablet:!py-3 laptop:mb-0'
      />
    </div>
  </div>
  <Image
    alt='workshop-image'
    src={WorkshopImage}
    class='h-fit min-h-[269px] w-fit object-cover tablet:min-h-[454px]'
  />
</section>
