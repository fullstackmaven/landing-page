---
import BootcampScheduleImage1 from '@assets/common/bootcamp-schedule/bootcamp-schedule-1-test.jpg';
import BootcampScheduleImage2 from '@assets/common/bootcamp-schedule/bootcamp-schedule-2.gif';
import BootcampScheduleImage3 from '@assets/common/bootcamp-schedule/bootcamp-schedule-3.png';
import Header from '@components/Header.astro';
import type { ImageMetadata } from 'astro';
import ScheduleImage from './scheduleImage/ScheduleImage.astro';

export type BootcampSchedule = {
  image: ImageMetadata;
  altText: string;
  title?: string;
  subtitle?: string;
  description?: string;
};

const schedules: BootcampSchedule[] = [
  {
    image: BootcampScheduleImage1,
    altText: 'bootcamp-schedule-image-1',
    title: 'Live Coding and Coaching',
    subtitle: 'Monday & Wednesday · 90m',
    description: `Join live classes and collaborate with your classmates in the tools you'll be using everyday in the industry.`,
  },
  {
    image: BootcampScheduleImage2,
    altText: 'bootcamp-schedule-image-3',
    title: 'Feedback Friday',
    subtitle: 'Friday · Async',
    description: `Every Friday you'll receive personal feedback on your projects, portfolio, or resume.`,
  },
  {
    image: BootcampScheduleImage3,
    altText: 'bootcamp-schedule-image-3',
    title: 'Coding Challenges',
    subtitle: '10hrs',
    description: `Every week we recommend spending 10hrs completing  your coding tasks.`,
  },
];
---

<section id='qaoverview' class='min-w-full'>
  <div class='container max-w-screen-desktop'>
    <Header
      title='Live classes and career mentorship'
      headerTitle='Bootcamp Schedule'
      description={`Every week, you'll participate in two live classes on a Monday and
    Wednesday. In addition, you'll receive asynchronous career mentorship,
    access to our on-demand workshops, and personal feedback on your projects
    and portfolio from teachers and mentors every day of the week when you don't
    have a live session. Outside of our live class schedule, we recommend
    dedicating 5 hours a week to completing any tasks from class.`}
    />
    <div class='w-full'>
      <h2 class='mb-4 pt-3 text-s font-bold'>Weekly Bootcamp Schedule</h2>
      <ul
        class='relative flex snap-x gap-x-4 overflow-x-scroll laptop:overflow-hidden'
      >
        {
          schedules.map((schedule) => (
            <li class='inline-block h-max min-w-max snap-center'>
              <ScheduleImage {...schedule} />
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
