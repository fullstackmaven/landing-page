---
import { Image } from 'astro:assets';
import ImageAirbnb from '/public/home-page/airbnb-logo.svg';
import ImageAmazon from '/public/home-page/amazon-logo.svg';
import ImageBooking from '/public/home-page/booking-logo.svg';
import ImageGoogle from '/public/home-page/google-logo.svg';
import ImageGradWorkVideoDesktop from '/public/home-page/grad-work-video-desktop.svg';
import ImageGradWorkVideo from '/public/home-page/grad-work-video.svg';
import ImageLinkedin from '/public/home-page/linkedin-logo.svg';
import ImageMeta from '/public/home-page/meta-logo.svg';
