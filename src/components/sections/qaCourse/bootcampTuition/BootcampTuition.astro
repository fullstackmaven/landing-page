---
import { Button } from '../../../Button.tsx';
import GetPaidCard from './Cards/GetPaidCard.astro';
import NotSureYetCard from './Cards/NotSureYetCard.astro';
---

<div id='qa-tuition' class='container'>
  <p class='text-dark-gray text-xxs font-normal uppercase pb-3 lg:text-s'>
    Bootcamp tuition
  </p>
  <h1 class='text-dark text-l font-bold pb-4 lg:text-2xl'>
    Tuition made simple and affordable
  </h1>
  <div class='flex flex-col md:grid md:grid-cols-2 md:mb-0 lg:grid-rows-2'>
    <ul
      class='bg-white p-6 lg:p-8 rounded-s mb-4 w-full order-1 md:col-span-1 lg:row-span-2'
    >
      <li class='h-[70px] flex justify-between items-center mb-3 lg:mb-8'>
        <h1 class='text-dark text-base font-bold leading-[26px] lg:text-l'>
          Upfront
        </h1>
        <h1 class='flex flex-col text-dark text-base font-bold lg:text-l'>
          $8,700
          <span
            class='text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-[8px] font-normal leading-[10.4px] text-center'
            >Pay total â€¢ save $800</span
          >
        </h1>
      </li>
      <li class='h-[1px] bg-[#DADADA] mb-3 lg:mb-8'></li>
      <li class='h-[70px] flex justify-between items-center mb-3 lg:mb-8'>
        <h1 class='text-dark text-base font-bold leading-[26px] lg:text-l'>
          Installments
        </h1>
        <h1 class='flex flex-col text-dark text-base font-bold lg:text-l'>
          $1,180 / month
          <span
            class='text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-[8px] font-normal leading-[10.4px] text-center'
            >$9,440 in total</span
          >
        </h1>
      </li>
      <li class='h-[1px] bg-[#DADADA] mb-3 lg:mb-8'></li>
      <li>
        <Button className='w-full py-3 px-6 h-[70px]' title='Apply now' />
      </li>
    </ul>
    <div
      class='order-2 md:order-3 md:col-span-2 lg:order-2 lg:col-span-1 lg:row-span-1 mb-2 lg:ml-6 lg:mb-6'
    >
      <NotSureYetCard />
    </div>
    <div
      class='order-3 md:order-2 md:col-span-1 lg:order-3 lg:col-span-1 lg:row-span-1 md:mb-4 md:ml-6'
    >
      <GetPaidCard />
    </div>
  </div>
</div>
