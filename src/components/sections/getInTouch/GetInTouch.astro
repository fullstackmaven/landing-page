---
import './getInTouch.scss';
import ContactForm from './contactForm/ContactForm.astro';
---

<div
  class='courses pt-12 mx-auto px-4 flex flex-col gap-6 md:px-8 md:gap-4 lg:gap-6 xl:px-13 xl:gap-4'
>
  <div class='bg-white'>
    <div class='orange-bg p-6 rounded'>
      <div class='flex flex-row justify-center content-center'>
        <img src='https://placehold.co/100' class='rounded-full' />
        <img src='https://placehold.co/100' class='rounded-full overlap-left' />
        <img src='https://placehold.co/100' class='rounded-full overlap-left' />
      </div>
      <h1 class='text-l text-center m-3'>
        Get in touch with our program advisor to learn more!
      </h1>
    </div>
    <div class='flex justify-around content-center mt-5 mb-6'>
      <div class='flex flex-col justify-center content-center'>
        <div class='flex justify-center self-center form-step'>
          <p class='text-xs self-center'>1</p>
        </div>
        <p class='m-2'>Contact info</p>
      </div>
      <div class='flex flex-col justify-center content-center'>
        <div class='flex justify-center self-center form-step'>
          <p class='text-xs self-center'>2</p>
        </div>
        <p class='m-2'>Q&A</p>
      </div>
      <div class='flex flex-col justify-center content-center'>
        <div class='flex justify-center self-center form-step'>
          <p class='text-xs self-center'>3</p>
        </div>
        <p class='m-2'>Book a Call</p>
      </div>
    </div>
    <ContactForm />
  </div>
</div>
