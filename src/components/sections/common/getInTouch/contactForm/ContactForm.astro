---
import { Button } from '@components/Button';
import Dropdown from '@components/Dropdown';
---

<div class='h-full w-full rounded-s bg-white p-4 tablet:p-6'>
  <div class='mb-4 flex content-center justify-around'>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='flex h-8 w-8 justify-center self-center rounded-xl bg-gray-50'
      >
        <p class='self-center text-xs'>1</p>
      </div>
      <p class='m-2'>Contact info</p>
    </div>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='flex h-8 w-8 justify-center self-center rounded-xl bg-gray-50'
      >
        <p class='self-center text-xs'>2</p>
      </div>
      <p class='m-2'>Q&A</p>
    </div>
    <div class='flex flex-col content-center justify-center'>
      <div
        class='flex h-8 w-8 justify-center self-center rounded-xl bg-gray-50'
      >
        <p class='self-center text-xs'>3</p>
      </div>
      <p class='m-2'>Book a Call</p>
    </div>
  </div>
  <form class='mt-6 flex flex-col px-4'>
    <input
      class='mb-4 rounded-s border border-gray-50 px-5 py-4 tablet:px-3 tablet:py-2 tablet:text-xxs'
      type='text'
      placeholder='Name'
    />
    <input
      class='mb-4 rounded-s border border-gray-50 px-5 py-4 tablet:px-3 tablet:py-2 tablet:text-xxs'
      type='email'
      placeholder='Email'
    />
    <div class='mb-4 flex flex-row justify-between gap-x-2 tablet:gap-x-1'>
      <Dropdown client:load />
      <input
        class='w-8/12 rounded-s border border-gray-50 px-5 py-4 tablet:px-3 tablet:py-2 tablet:text-xxs'
        type='number'
        placeholder='Phone Number'
      />
    </div>
    <Button
      title={'Continue'}
      className={'bg-dark/90 text-dark mt-6 w-full py-4'}
    />
  </form>
</div>
