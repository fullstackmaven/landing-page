interface TDefinition {
  title: string;
  description: string;
}

const defaultDefinitions: TDefinition[] = [
  {
    title: 'Bug busters',
    description:
      "QA Engineers test software to find those pesky bugs and glitches. It's a bit like a treasure hunt, but instead of gold, you discover issues in software.",
  },
  {
    title: 'Tech team players',
    description:
      "They team up with software experts to supercharge software quality. It's a bit like being the strategist behind the team, making sure they achieve victory!",
  },
  {
    title: 'Embrace automation',
    description:
      "In our QA course, we introduce you to the world of programming with a focus on test automation! You won't need to be a full-blown developer, but you'll grasp the essential skills to automate testing processes. It's like learning a new superpower in the tech world!",
  },
  {
    title: 'Fast-track to tech',
    description:
      "Start as a QA enthusiast and, as you dive into the tech universe, you'll discover endless possibilities. Whether you want to explore further in automation or explore other tech roles, the path is yours to chart.",
