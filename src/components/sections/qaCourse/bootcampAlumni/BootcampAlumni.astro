---
import { Image } from 'astro:assets';
import VideoImage from './VideoImage/VideoImage.astro';
import ImageAlumni1 from '/public/qa-course/alumni-1.svg';
import ImageAlumni2 from '/public/qa-course/alumni-2.svg';
import ImageAlumni3 from '/public/qa-course/alumni-3.svg';
import ImageAlumni4 from '/public/qa-course/alumni-4.svg';
import ImageAlumni5 from '/public/qa-course/alumni-5.svg';
---

<section class='lg:gap-y-6 grid gap-y-4'>
  <p
    class='text-dark-gray lg:text-s lg:leading-6 text-xxs font-normal uppercase leading-4'
  >
    BOOTCAMP ALUMNI
  </p>
  <h1
    class='text-dark md:text-xl md:leading-2xl lg:text-2xl lg:leading-3xl text-l font-bold leading-8'
  >
    Meet our alumni who work at companies like Meta, Google, and Nike!
  </h1>
  <div class='md:grid-cols-3 lg:grid-cols-5 grid w-full grid-cols-2 gap-x-4'>
    <VideoImage>
      <Image src={ImageAlumni1} alt='alumni-1' loading='lazy' class='w-full' />
    </VideoImage>
    <VideoImage>
      <Image src={ImageAlumni2} alt='alumni-2' loading='lazy' class='w-full' />
    </VideoImage>
    <VideoImage className='md:visible md:block hidden'>
      <Image src={ImageAlumni3} alt='alumni-3' loading='lazy' class='w-full' />
    </VideoImage>
    <VideoImage className='lg:block hidden'>
      <Image src={ImageAlumni4} alt='alumni-4' loading='lazy' class='w-full' />
    </VideoImage>
    <VideoImage className='lg:block hidden'>
      <Image src={ImageAlumni5} alt='alumni-5' loading='lazy' class='w-full' />
    </VideoImage>
  </div>
</section>
