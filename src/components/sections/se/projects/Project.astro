---
import ProjectEcommerce from '@assets/se/project-ecommerce.png';
import ProjectPrice from '@assets/se/project-price.png';
import ProjectNextjs from '@assets/se/projects-nextjs.png';
import { Button } from '@components/Button';
import CardImage from './cardImage/CardImage.astro';
---

<section
  class='container flex max-w-screen-desktop flex-col laptop:flex-row laptop:gap-x-6'
>
  <header class='mb-6 grid gap-y-3'>
    <p class='text-xxs uppercase text-gray-700 tablet:text-xs laptop:text-s'>
      PROJECTS
    </p>
    <h1
      class:list={[
        'text-l font-bold tracking-base text-black tablet:text-xl laptop:text-2xl',
      ]}
    >
      Master how to build fullstack web apps and <span class='gradient-text'
        >deploy to cloud</span
      >
    </h1>
    <Button
      title='Enroll now'
      className='mb-6 hidden w-fit !px-4 !py-2 tablet:!px-6 tablet:!py-3 laptop:mb-0 laptop:block'
    />
  </header>
  <div class='relative'>
    <div class='mx-auto h-[273px] w-[342px] tablet:w-[515px]'>
      <CardImage
        class='absolute z-30 ml-16 mt-13 tablet:ml-18'
        title='Next.js Boilerplate'
        description={`A Next.js app and a Serverless\nFunction API`}
        image={ProjectNextjs}
      />
      <CardImage
        class='absolute z-20 ml-13 mt-8 rotate-[-1.871deg] tablet:ml-15'
        title='E-commerce'
        description='An all-in-one starter kit for high-performance e-commerce sites.'
        image={ProjectEcommerce}
      />
      <CardImage
        class='absolute z-10 rotate-[-3.745deg]'
        title='E-commerce'
        description='An all-in-one starter kit for high-performance e-commerce sites.'
        image={ProjectPrice}
      />
    </div>
  </div>
  <!-- <Image
    alt='projects-image'
    src={ProjectsImage}
    width={ProjectsImage.width}
    height={ProjectsImage.height}
    class='mx-auto mt-6 min-h-[272px] w-fit object-cover tablet:min-h-[333px]'
  /> -->
</section>
