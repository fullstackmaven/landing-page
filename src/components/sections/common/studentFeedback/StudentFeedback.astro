---
import VideoImage from '@components/sections/qaCourse/bootcampAlumni/VideoImage/VideoImage.astro';
import { Image } from 'astro:assets';
import Feedback from '../feedback/Feedback.astro';
import ImageAlumni1 from '/public/qa-course/alumni-2.svg';
import ImageAlumni2 from '/public/qa-course/alumni-3.svg';
---

<section class='container pt-12'>
  <header class='pb-4'>
    <h1 class='text-xl font-bold text-black'>
      Our students are all over the universe
    </h1>
  </header>
  <p class='pb-4 text-s -tracking-tight text-gray-700'>
    Start a life-changing journey with our fully online courses. Keep your
    current job while gaining expertise in a new profession, all at your own
    pace
  </p>
  <div class='mb-12 flex gap-x-2'>
    <VideoImage>
      <Image alt='alumni-1' src={ImageAlumni1} />
    </VideoImage>
    <VideoImage>
      <Image alt='alumni-2' src={ImageAlumni2} />
    </VideoImage>
  </div>
  <div class='grid gap-y-10'>
    <Feedback />
    <Feedback />
    <Feedback />
    <Feedback />
  </div>
</section>
