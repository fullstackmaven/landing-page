---
import Footer from '../components/Footer.astro';
import { Header } from '../components/Header';
import Courses from '../components/sections/homepage/courses/Courses.astro';
import GetInTouch from '../components/sections/common/getInTouch/GetInTouch.astro';
import OurGrads from '../components/sections/homepage/ourGrads/OurGrads.astro';
import Promo from '../components/sections/homepage/promo/Promo.astro';
import Questions from '../components/sections/common/questions/Questions.astro';
import SucessStories from '../components/sections/homepage/sucessStories/SucessStories.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Home page'>
  <Header
    client:load
    className='bg-secondary'
    menuItems={[
      {
        label: 'Programs',
        id: 'home-programs',
      },
      {
        label: 'Why Cyram',
        id: 'home-why-cyram',
      },
      {
        label: 'Resources',
        id: 'home-resources',
      },
      {
        label: 'Blog',
        id: 'home-blog',
      },
    ]}
  />
  <div class='bg-secondary pt-6 lg:pt-13 xl:pt-[88px]'>
    <Promo />
  </div>
  <Courses />
  <SucessStories />
  <OurGrads />
  <Questions />
  <GetInTouch />
  <Footer />
</Layout>
