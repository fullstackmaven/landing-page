---
import LiveIndicatorPulse from '../../../../LiveIndicatorPulse.astro';
import '../courses.scss';
const { course } = Astro.props;
---

<div
  class='relative flex flex-col items-center p-3 lg:p-4 gap-6 lg:gap-8 self-stretch rounded-[16px] border-[#DEDCD3] bg-white'
>
  <div
    class='bg-[url("/home-page/live-lecture-image.jpeg")] w-full h-[314px] lg:h-[431px] bg-no-repeat bg-cover bg-center rounded-l md:rounded-l'
  >
    <div class='backdrop-blur-[2px] w-full h-full rounded-xl'>
      <div
        class='flex absolute left-4 top-5 px-2 py-1 border border-[#C0BFB2] backdrop-blur-[2px] rounded-xs items-center gap-3'
      >
        <LiveIndicatorPulse />
        <p
          class='text-xs lg:text-l tracking-[0.28px] lg:tracking-[0.48px] font-normal text-white'
        >
          Live Lectures
        </p>
      </div>
      <img
        src='home-page/live-lecture-tools-image.svg'
        alt={'live-lecture-tools-image'}
        class='absolute right-4 top-5'
      />
    </div>
  </div>
  <div class='flex flex-col w-full gap-2 lg:gap-3'>
    <h2 class='text-dark text-base lg:text-l font-bold tracking-[0.4px]'>
      {course.courseTitle}
    </h2>
    <p class='text-dark-gray text-s lg:text-base font-medium tracking-[0.32px]'>
      {course.type} &#183; {course.duration} months
    </p>
  </div>
</div>
