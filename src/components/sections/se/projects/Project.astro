---
import ProjectsImage from '@assets/se/project-image.svg';
import { Image } from 'astro:assets';
---

<section class='container max-w-screen-desktop'>
  <header class='grid gap-y-3 tablet:mb-6'>
    <p class='text-xxs uppercase text-gray-700 tablet:text-xs laptop:text-s'>
      PROJECTS
    </p>
    <h1
      class:list={[
        'tracking-base text-l font-bold text-black tablet:text-xl laptop:text-2xl',
      ]}
    >
      Master how to build fullstack web apps and <span class='gradient-text'
        >deploy to cloud</span
      >
    </h1>
  </header>
  <Image
    alt='workshop-image'
    src={ProjectsImage}
    width={ProjectsImage.width}
    height={ProjectsImage.height}
    class='mx-auto mt-6 min-h-[272px] w-fit object-cover tablet:min-h-[333px]'
  />
</section>
