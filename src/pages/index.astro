---
import Footer from '@components/Footer.astro';
import { Header } from '@components/Header';
import Questions from '@components/sections/common/questions/Questions.astro';
import StudentFeedback from '@components/sections/common/studentFeedback/StudentFeedback.astro';
import CourseAccess from '@components/sections/homepage/courseAccess/CourseAccess.astro';
import Courses from '@components/sections/homepage/courses/Courses.astro';
import HeaderDropdown from '@components/sections/homepage/headerDropdown/HeaderDropdown.astro';
import OurGrads from '@components/sections/homepage/ourGrads/OurGrads.astro';
import Promo from '@components/sections/homepage/promo/Promo.astro';
import Layout from '@layouts/Layout.astro';
import '../index.scss';

const menuItems = [
  {
    label: 'Bootcamps',
    id: 'homebootcamps',
    isDropdown: true,
  },
  {
    label: 'Why Cyram',
    id: 'homewhycyram',
    isDropdown: true,
  },
  {
    label: 'Resources',
    id: 'homeresources',
    isDropdown: true,
  },
  {
    label: 'Blog',
    id: 'homeblog',
  },
];
---

<Layout title='Cyram Online Coding Bootcamp'>
  <main>
    <Header client:load menuItems={menuItems}>
      <div slot='homebootcamps' class='flex h-full w-full flex-col gap-y-6'>
        <HeaderDropdown />
      </div>
    </Header>
    <Promo />
    <Courses />
    <CourseAccess />
    <StudentFeedback
      class='pt-12 tablet:pt-15 laptop:pt-16'
      title='Our students are all over the universe'
      description='Start a life-changing journey with our fully online courses. Keep your current job while gaining expertise in a new profession, all at your own pace'
    />
    <OurGrads />
    <Questions class='py-13 tablet:py-15 laptop:py-16' />
    <Footer />
  </main>
</Layout>
