---
import { Button } from "@components/Button";
import GetPaidOrRefundCard from "./Cards/GetPaidOrRefundCard.astro";
---

<div id="qa-tuition" class="container grid gap-y-4 lg:gap-y-6">
  <p class="text-dark-gray text-xs leading-5 font-normal uppercase">
    Bootcamp tuition
  </p>
  <h2
    class="text-dark text-l leading-8 md:text-xl md:leading-2xl font-bold lg:text-2xl"
  >
    Tuition made simple and affordable
  </h2>
  <div class="flex flex-col gap-4 md:gap-6 md:grid md:grid-cols-2">
    <ul
      class="bg-white p-4 space-y-4 rounded-l md:p-6 md:space-y-6 md:col-span-1 lg:p-8 lg:space-y-8 w-full order-1"
    >
      <li class="h-[70px] flex justify-between items-center">
        <h3 class="text-dark text-base font-bold lg:text-l">Upfront</h3>
        <h3 class="flex flex-col gap-2 text-dark text-base font-bold lg:text-l">
          $8,700
          <span
            class="text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-xxs font-normal text-center"
            >Pay total â€¢ save $800</span
          >
        </h3>
      </li>
      <li class="h-[1px] bg-[#DADADA]"></li>
      <li class="h-[70px] flex justify-between items-center">
        <h3 class="text-dark text-base font-bold lg:text-l">Installments</h3>
        <h3 class="flex flex-col gap-2 text-dark text-base font-bold lg:text-l">
          $1,180 / month
          <span
            class="text-dark bg-[#DDF7C7] rounded-xs px-[6px] py-1 text-xxs font-normal text-center"
            >$9,440 in total</span
          >
        </h3>
      </li>
      <li class="h-[1px] bg-[#DADADA]"></li>
      <li>
        <Button
          className="w-full py-3 px-6 h-12 lg:h-[70px]"
          title="Enroll now"
        />
      </li>
    </ul>
    <div
      class="order-3 md:order-2 md:col-span-1 lg:order-3 lg:col-span-1 lg:row-span-1"
    >
      <GetPaidOrRefundCard />
    </div>
  </div>
</div>
