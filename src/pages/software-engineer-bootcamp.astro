---
import { Header } from '@components/Header';
import HeaderDropdown from '@components/homePage/HeaderDropdown.astro';
import Overview from '@components/sections/qaCourse/overview/Overview.astro';
import '../index.scss';
import Layout from '@layouts/Layout.astro';
import CourseDefinition from '@components/CourseDefinition.astro';

const menuItems = [
  { label: 'Bootcamps', id: 'qabootcamp', isDropdown: true, isLeft: true },
  { label: 'Overview', id: 'qaoverview' },
  { label: 'Curriculum', id: 'qacurriculum' },
  { label: 'Why Cyram ', id: 'whycyram' },
  { label: 'Tuition', id: 'qatuition' },
  { label: 'Education Team', id: 'qaeducationteam' },
  { label: 'FAQ', id: 'faq' },
];
---

<Layout title='Quality Assurance Bootcamp'>
  <>
    <div class='h-fit'>
      <Header client:load menuItems={menuItems}>
        <div slot='se-bootcamp' class='flex h-full w-full flex-col gap-y-6'>
          <HeaderDropdown />
        </div>
      </Header>
    </div>
    <div
      class='laptop:gap-y8 flex flex-grow flex-col gap-y-12 pt-12 tablet:gap-y-14 tablet:py-[80px] laptop:pb-[128px] laptop:pt-19'
    >
      <CourseDefinition name='se' />
      <Overview />
    </div>
  </>
</Layout>
