---
import './courses.scss';
import CourseCard from './course_card/CourseCard.astro';

type Props = {
  courses?: Course[];
}

const defaultCourses: Course[] = [
  {
    image: 'public/home-page/course-image.svg',
    alt: '#',
    courseTitle: 'Software Engineering',
    skills: 'Full-Stack: JavaScript, React.js, HTML, CSS, Babel, Webpack, NPM, GitHub, Git, Rest API, Google Cloud, MongoDB, Node.js',
    startingSalary: '$85,000',
    duration: 8,
    price: '$12,700'
  },
  {
    image: 'public/home-page/course-image.svg',
    alt: '#',
    courseTitle: 'Quality Assurance',
    skills: 'Full-Stack: JavaScript, React.js, HTML, CSS, Babel, Webpack, NPM, GitHub, Git, Rest API, Google Cloud, MongoDB, Node.js',
    startingSalary: '$85,000',
    duration: 8,
    price: '$12,700'
  }
];

const { courses =defaultCourses } = Astro.props;

type Course = {
  image: string;
  alt: string;
  courseTitle: string;
  skills: string;
  startingSalary: string;
  duration: number
  price: string;
}

---

<div
  class='courses pt-12 mx-auto px-4 flex flex-col gap-6 md:px-8 md:gap-4 lg:gap-6 xl:px-13 xl:gap-4'
>
  <div class='container'>
    <h2 class='text-dark text-l font-bold leading-s pb-3'>Our Courses</h2>
    <div class='description text-xs font-normal leading-tight max-w-3xl'>
      Start a life-changing journey with our fully online courses. Keep your
      current job while gaining expertise in a new profession, all at your own
      pace.
    </div>
    {courses.map(course => <CourseCard course={course}/>)}
  </div>
</div>