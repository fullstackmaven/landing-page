<section class='wrapper flex flex-col gap-y-4 lg:gap-y-6'>
  <header class='grid gap-y-4 lg:gap-y-6'>
    <p
      class='text-xs font-normal uppercase leading-5 text-dark-gray lg:text-s lg:leading-6'
    >
      HERE'S THE DEAL
    </p>
    <h1
      class='text-l font-bold leading-8 text-dark md:text-xl md:leading-2xl lg:text-2xl lg:leading-3xl'
    >
      What is Quality Assurance?
    </h1>
  </header>
  <ul class='grid grid-cols-1 gap-y-3 lg:grid-cols-2 lg:gap-x-6 lg:gap-y-6'>
    {
      defaultDefinitions.map((definition) => (
        <li>
          <p class='text-s font-normal leading-6 text-dark-gray lg:text-l lg:leading-8'>
            <span class='font-extrabold text-secondary lg:leading-8'>
              {definition.title}:{' '}
            </span>
            {definition.description}
          </p>
        </li>
      ))
    }
  </ul>
</section>
