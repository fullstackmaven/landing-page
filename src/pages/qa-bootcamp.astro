---
import Navbar from '@components/Navbar';
import CourseDefinition from '@components/sections/common/courseDefinition/CourseDefinition.astro';
import Faq from '@components/sections/common/faq/Faq.astro';
import Footer from '@components/sections/common/footer/Footer.astro';
import GetStarted from '@components/sections/common/getStarted/GetStarted.astro';
import Hero from '@components/sections/common/hero/Hero.astro';
import HeaderDropdown from '@components/sections/home/headerDropdown/HeaderDropdown.astro';
import BootcampTeam from '@components/sections/qa/bootcampTeam/BootcampTeam.astro';
import BootcampTuition from '@components/sections/qa/bootcampTuition/BootcampTuition.astro';
import Curriculum from '@components/sections/qa/curriculum/Curriculum';
import Overview from '@components/sections/qa/overview/Overview.astro';
import Schedule from '@components/sections/qa/schedule/Schedule.astro';
import Students from '@components/sections/qa/students/Students.astro';
import WhyCyram from '@components/sections/qa/whyCyram/WhyCyram.astro';
import Layout from '@layouts/Layout.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import '../index.scss';

const menuItems = [
  { label: 'Bootcamps', id: 'qabootcamp', isDropdown: true, isLeft: true },
  { label: 'Overview', id: 'qaoverview' },
  { label: 'Curriculum', id: 'qacurriculum' },
  { label: 'Why Cyram ', id: 'whycyram' },
  { label: 'Tuition', id: 'qatuition' },
  { label: 'Education Team', id: 'qaeducationteam' },
  { label: 'FAQ', id: 'faq' },
];
---

<Layout title='Quality Assurance Bootcamp'>
  <div class='h-fit bg-secondary'>
    <Navbar client:load menuItems={menuItems}>
      <div slot='qabootcamp' class='flex h-full w-full flex-col gap-y-6'>
        <HeaderDropdown />
      </div>
    </Navbar>
    <Hero courseName='qa' />
    <ViewTransitions />
  </div>
  <div
    class='flex flex-grow flex-col gap-y-12 pt-12 tablet:gap-y-15 tablet:pt-16 laptop:gap-y-16 laptop:pt-17'
  >
    <CourseDefinition name='qa' />
    <Overview />
    <Curriculum client:load />
    <Schedule />
    <WhyCyram />
    <BootcampTeam />
    <Students />
    <BootcampTuition />
    <Faq page='qa' />
    <GetStarted />
    <Footer />
  </div>
</Layout>
