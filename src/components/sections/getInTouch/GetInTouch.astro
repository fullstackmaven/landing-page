---
import ContactForm from './contactForm/ContactForm.astro';
import './getInTouch.scss';
---

<div
  class='courses container pt-12 flex flex-col gap-6 md:gap-4 lg:gap-6 xl:gap-4'
>
  <div class='bg-white rounded-xs flex flex-col'>
    <div class='bg-secondary p-6 rounded-xs flex'>
      <div
        class='flex flex-col w-full md:w-1/2 md:justify-start md:items-start md:p-6'
      >
        <div class='flex flex-row justify-center content-center'>
          <img
            src='https://placehold.co/100'
            class='rounded-full md:w-[50px]'
          />
          <img
            src='https://placehold.co/100'
            class='rounded-full md:w-[50px] overlap-left'
          />
          <img
            src='https://placehold.co/100'
            class='rounded-full md:w-[50px] overlap-left'
          />
        </div>
        <h1
          class='text-l text-center md:text-left m-3 md:font-extrabold md:text-xl'
        >
          Get in touch with our program advisor to learn more!
        </h1>
      </div>
      <div class='hidden md:visible md:flex w-full md:w-1/2'>
        <ContactForm />
      </div>
    </div>
    <div class='md:hidden'>
      <ContactForm />
    </div>
  </div>
</div>
