---
import { Button } from '@components/Button';
import GetPaidOrRefundCard from './Cards/GetPaidOrRefundCard.astro';
---

<section id='qatuition' class='lg:gap-y-6 grid gap-y-4'>
  <p class='text-dark-gray text-xxs font-normal uppercase leading-4'>
    Bootcamp tuition
  </p>
  <h1
    class='text-dark md:text-xl md:leading-2xl lg:text-2xl text-l font-bold leading-8'
  >
    Simple, affordable pricing
  </h1>
  <div class='md:grid md:grid-cols-2 md:gap-6 flex flex-col gap-4'>
    <ul
      class='md:col-span-1 md:gap-y-6 md:rounded-[16px] md:p-6 lg:gap-y-8 lg:p-8 order-1 flex w-full flex-col gap-y-4 rounded-l bg-white p-4'
    >
      <li class='flex h-[70px] items-center justify-between'>
        <h3 class='text-dark lg:text-l text-base font-bold'>Upfront</h3>
        <h3 class='text-dark lg:text-l flex flex-col gap-2 text-base font-bold'>
          $8,700
          <span
            class='text-dark rounded-xs bg-[#DDF7C7] px-[6px] py-1 text-center text-xxs font-normal'
            >Pay total â€¢ save $800</span
          >
        </h3>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li class='flex h-[70px] items-center justify-between'>
        <h3 class='text-dark lg:text-l text-base font-bold'>Installments</h3>
        <h3 class='text-dark lg:text-l flex flex-col gap-2 text-base font-bold'>
          $1,180 / month
          <span
            class='text-dark rounded-xs bg-[#DDF7C7] px-[6px] py-1 text-center text-xxs font-normal'
            >$9,440 in total</span
          >
        </h3>
      </li>
      <li class='h-[1px] bg-[#DADADA]'></li>
      <li>
        <Button
          className='lg:rounded-l lg:px-8 lg:py-4 w-full px-6 py-3'
          title='Enroll now'
        />
      </li>
    </ul>
    <div
      class='md:order-2 md:col-span-1 lg:order-3 lg:col-span-1 lg:row-span-1 order-3'
    >
      <GetPaidOrRefundCard />
    </div>
  </div>
</section>
