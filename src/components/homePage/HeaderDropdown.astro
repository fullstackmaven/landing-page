---
import classNames from 'classnames';
import { Button } from '../Button';
import LiveIndicatorPulse from '../LiveIndicatorPulse.astro';
import { defaultCourses } from '../sections/homepage/courses/Courses.astro';
import CourseCard from './CourseCard.astro';
---

<div class='flex flex-col w-full h-full gap-y-6'>
  <p>Go from beginner to expert at your own pace</p>
  <div class='w-full grid grid-cols-4 gap-x-4'>
    {
      defaultCourses.map((course) => (
        <div class='col-span-1 w-full h-full'>
          <CourseCard course={course} />
        </div>
      ))
    }
    <div class='p-6 col-span-2'>
      <h3 class='text-l font-bold leading-[32px] tracking-[0.48px] mb-2'>
        Not sure which is the right bootcamp for you?
      </h3>
      <p class='mb-6'>It just takes 3 minutes</p>
      <Button title='Take a career quick' />
    </div>
  </div>
</div>
